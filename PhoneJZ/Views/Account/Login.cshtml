@using PhoneJZ.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng Nhập";
}
<div style="height:50px;"></div>
<main aria-labelledby="title" style="text-align:center; padding:50px 25% 50px 25%;" >
    <section id="loginForm" style="padding:50px; background: white; border-radius:20px; border:1px solid;">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            <h2 id="title">@ViewBag.Title</h2>
            <div style="height:10px;"></div>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row g-2">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="row g-2">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Mật Khẩu", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="row g-2">
                <input type="submit" value="Đăng Nhập" class="btn" style="background: #f94c2f; color:white;" />
            </div>
            <div style="height:30px;"></div>
            <p>
                Bạn chưa có tài khoản?
                <a style="text-decoration:none; float:right; width:100%; " class="btn btn-dark" href="/Account/Register">
                  Đăng Ký
                </a>
            </p>
        }
    </section>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}